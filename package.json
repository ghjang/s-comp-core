{
	"name": "s-comp-core",
	"version": "0.1.0",
	"license": "MIT",
	"author": "ghjang",
	"repository": {
		"type": "git",
		"url": "https://github.com/ghjang/s-comp-core.git"
	},
	"bugs": {
		"url": "https://github.com/ghjang/s-comp-core/issues"
	},
	"keywords": [
		"svelte",
		"components",
		"ui"
	],
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"default": "./dist/index.js"
		},
		"./common": {
			"types": "./dist/common/index.d.ts",
			"svelte": "./dist/common/index.js",
			"default": "./dist/common/index.js"
		},
		"./common/action": {
			"types": "./dist/common/action/index.d.ts",
			"svelte": "./dist/common/action/index.js",
			"default": "./dist/common/action/index.js"
		},
		"./common/data": {
			"types": "./dist/common/data/index.d.ts",
			"svelte": "./dist/common/data/index.js",
			"default": "./dist/common/data/index.js"
		},
		"./common/util": {
			"types": "./dist/common/util/index.d.ts",
			"svelte": "./dist/common/util/index.js",
			"default": "./dist/common/util/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*",
		"static"
	],
	"peerDependencies": {
		"svelte": "^4.0.0"
	},
	"devDependencies": {
		"@playwright/test": "^1.28.1",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/package": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/eslint": "^9.6.0",
		"@types/lodash-es": "^4.17.12",
		"eslint": "^9.0.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.36.0",
		"globals": "^15.0.0",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"publint": "^0.2.0",
		"sass-embedded": "^1.78.0",
		"svelte": "^4.2.7",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.0.0",
		"vite": "^5.0.11",
		"vitest": "^2.0.0"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"dependencies": {
		"lodash-es": "^4.17.21"
	}
}
